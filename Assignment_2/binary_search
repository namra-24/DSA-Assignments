#include <stdio.h>

// NOTE: Binary Search REQUIRES the input array to be sorted.

// Iterative implementation of Binary Search
int binarySearch(int arr[], int n, int key) {
    int low = 0;
    int high = n - 1;

    while (low <= high) {
        int mid = low + (high - low) / 2;

        if (arr[mid] == key) {
            return mid; // Key found
        }
        if (arr[mid] < key) {
            low = mid + 1; // Ignore left half
        }
        else {
            high = mid - 1; // Ignore right half
        }
    }

    return -1; // Key not found
}

int main() {
    // Array MUST be sorted for Binary Search to work
    int sorted_arr[] = {5, 6, 7, 10, 12, 13, 15};
    int n = sizeof(sorted_arr) / sizeof(sorted_arr[0]);
    int key_to_find = 13;

    printf("Sorted Array: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", sorted_arr[i]);
    }
    printf("\n");

    int index = binarySearch(sorted_arr, n, key_to_find);

    if (index != -1) {
        printf("Binary Search: Element %d found at index %d.\n", key_to_find, index);
    } else {
        printf("Binary Search: Element %d not found.\n", key_to_find);
    }

    return 0;
}
