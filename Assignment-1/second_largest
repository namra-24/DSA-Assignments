#include <stdio.h>
#include <limits.h> // Required for INT_MIN

// Function to find the second largest element in an array
int findSecondLargest(int arr[], int n) {
    if (n < 2) {
        printf("Error: Array must have at least two elements.\n");
        return INT_MIN;
    }

    int largest = INT_MIN;
    int secondLargest = INT_MIN;

    for (int i = 0; i < n; i++) {
        if (arr[i] > largest) {
            // New largest found, shift old largest to secondLargest
            secondLargest = largest;
            largest = arr[i];
        } else if (arr[i] > secondLargest && arr[i] != largest) {
            // Found a value that is less than largest but greater than secondLargest
            secondLargest = arr[i];
        }
    }
    // Check if the second largest was ever updated
    if (secondLargest == INT_MIN && largest != INT_MIN) {
        printf("Warning: All elements in the array might be identical.\n");
    }

    return secondLargest;
}

int main() {
    int arr[] = {15, 8, 20, 10, 5, 2, 20}; // Test with duplicates
    int n = sizeof(arr) / sizeof(arr[0]);

    printf("Array: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    int second_largest = findSecondLargest(arr, n);

    if (second_largest != INT_MIN) {
        printf("The second largest element is: %d\n", second_largest);
    }

    return 0;
}
