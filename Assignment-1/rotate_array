#include <stdio.h>

// Function to print an array (used for testing)
void printArray(int arr[], int size) {
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

// Function to rotate the array left by d positions using a temporary array
void rotateArrayLeft(int arr[], int n, int d) {
    // Ensure d is within the bounds of the array size
    d = d % n;
    if (d == 0) return;

    // Use a VLA (Variable Length Array) for temporary storage
    int temp[d];

    // 1. Store the first d elements in the temporary array
    for (int i = 0; i < d; i++) {
        temp[i] = arr[i];
    }

    // 2. Shift the remaining elements (n - d) to the front
    for (int i = d; i < n; i++) {
        arr[i - d] = arr[i];
    }

    // 3. Copy the temporary elements back to the end of the original array
    for (int i = 0; i < d; i++) {
        arr[n - d + i] = temp[i];
    }
}

int main() {
    int arr[] = {1, 2, 3, 4, 5, 6, 7};
    int n = sizeof(arr) / sizeof(arr[0]);
    int rotate_steps = 3;

    printf("Original Array: ");
    printArray(arr, n);

    printf("Rotating array left by %d steps...\n", rotate_steps);
    rotateArrayLeft(arr, n, rotate_steps);

    printf("Array after rotation: ");
    printArray(arr, n);

    return 0;
}
